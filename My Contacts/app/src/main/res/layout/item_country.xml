<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spinner">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/country_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/uzbekistan"
        tools:ignore="MissingClass" />

    <TextView
        android:id="@+id/country_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/country_item_image"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/country_item_image"
        android:gravity="center"
        android:text="Uzbekistan"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>